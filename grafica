    l20.setFillColor(sf::Color::Black);
    l20.setPosition(955, 60);

    sf::RectangleShape l21;
    l21.setSize(sf::Vector2f(4, 30));
    l21.setFillColor(sf::Color::Black);
    l21.setPosition(1080, 60);


    while (window.isOpen()) {
        sf::Event event;
        while (window.pollEvent(event)) {
            if (event.type == sf::Event::Closed)
                window.close();
        }

        window.clear(sf::Color(129, 129, 129));
        window.draw(firstPanel);
        window.draw(secondPanel);
        window.draw(firstScroll);
        window.draw(secondScroll);
        window.draw(l1);
