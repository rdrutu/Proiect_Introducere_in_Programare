    l15.setPosition(1023, 690);

    sf::RectangleShape l16;
    l16.setSize(sf::Vector2f(4, 30));
    l16.setFillColor(sf::Color::Black);
    l16.setPosition(270, 60);

    sf::RectangleShape l17;
    l17.setSize(sf::Vector2f(4, 30));
    l17.setFillColor(sf::Color::Black);
    l17.setPosition(355, 60);

    sf::RectangleShape l18;
    l18.setSize(sf::Vector2f(4, 30));
    l18.setFillColor(sf::Color::Black);
    l18.setPosition(440, 60);

    sf::RectangleShape l19;
    l19.setSize(sf::Vector2f(4, 30));
    l19.setFillColor(sf::Color::Black);
    l19.setPosition(810, 60);

    sf::RectangleShape l20;
