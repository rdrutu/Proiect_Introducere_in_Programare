
#include <SFML/Graphics.hpp>
//#include <Windows.h>
#include <iostream>
void createPanel(const::std::string,int height, int width, int x, int y)
{

}
int main() {
    sf::RenderWindow window(sf::VideoMode(1280, 720), "Total Commander");

    sf::RectangleShape firstPanel;
    firstPanel.setSize(sf::Vector2f(615, 600));
    firstPanel.setFillColor(sf::Color(176, 176, 176));
    firstPanel.setPosition(0,60);

    sf::RectangleShape secondPanel;
    secondPanel.setSize(sf::Vector2f(615, 600)); 
    secondPanel.setFillColor(sf::Color(176, 176, 176));
    secondPanel.setPosition(640, 60);

    sf::RectangleShape firstScroll;
    firstScroll.setSize(sf::Vector2f(25, 600)); 
    firstScroll.setFillColor(sf::Color::White);
    firstScroll.setPosition(615, 60);

    sf::RectangleShape secondScroll;
    secondScroll.setSize(sf::Vector2f(25, 600)); 
    secondScroll.setFillColor(sf::Color::White);
    secondScroll.setPosition(1255, 60); 

    sf::RectangleShape l1;
    l1.setSize(sf::Vector2f(1280, 2));
    l1.setFillColor(sf::Color::Black);
    l1.setPosition(0, 30);

    sf::RectangleShape l2;
    l2.setSize(sf::Vector2f(1280, 4));
    l2.setFillColor(sf::Color::Black);
    l2.setPosition(0, 60);

    sf::RectangleShape l3;
    l3.setSize(sf::Vector2f(1280, 2));
    l3.setFillColor(sf::Color::Black);
    l3.setPosition(0, 660);

    sf::RectangleShape l4;
    l4.setSize(sf::Vector2f(1280, 4));
    l4.setFillColor(sf::Color::Black);
    l4.setPosition(0, 690);

    sf::RectangleShape l5;
    l5.setSize(sf::Vector2f(3,690));
    l5.setFillColor(sf::Color::Black);
    l5.setPosition(640, 0);

    sf::RectangleShape l6;
    l6.setSize(sf::Vector2f(2, 600));
    l6.setFillColor(sf::Color::Black);
    l6.setPosition(1255, 60);

    sf::RectangleShape l7;
    l7.setSize(sf::Vector2f(2, 600));
    l7.setFillColor(sf::Color::Black);
    l7.setPosition(615, 60);

    sf::RectangleShape l8;
    l8.setSize(sf::Vector2f(1280, 4));
    l8.setFillColor(sf::Color::Black);
    l8.setPosition(0, 90);

    sf::RectangleShape l11;
    l11.setSize(sf::Vector2f(1280, 2));
    l11.setFillColor(sf::Color::Black);
    l11.setPosition(0, 630);

    sf::RectangleShape l12;
    l12.setSize(sf::Vector2f(5, 30));
    l12.setFillColor(sf::Color::Black);
    l12.setPosition(252, 690);

    sf::RectangleShape l13;
    l13.setSize(sf::Vector2f(5, 30));
    l13.setFillColor(sf::Color::Black);
    l13.setPosition(509, 690);

    sf::RectangleShape l14;
